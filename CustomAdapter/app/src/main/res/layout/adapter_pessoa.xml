<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:id="@+id/apessoa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Pessoa"
        android:id="@+id/fNome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Telfone"
        android:id="@+id/fTelefone"
        android:layout_below="@+id/fNome"
        android:layout_alignLeft="@+id/fNome"
        android:layout_alignStart="@+id/fNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cidade"
        android:id="@+id/fCidade"
        android:layout_below="@+id/fTelefone"
        android:layout_alignLeft="@+id/fTelefone"
        android:layout_alignStart="@+id/fTelefone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="UF"
        android:id="@+id/fEstado"
        android:layout_alignBottom="@+id/fCidade"
        android:layout_alignRight="@+id/fNome"
        android:layout_alignEnd="@+id/fNome" />
</RelativeLayout>